{
  "name": "document-review-approval",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n contracts,backend,frontend -c magenta,blue,green \"npm --workspace @internal/contracts run dev\" \"npm --workspace backend run dev\" \"npm --workspace frontend run dev\"",
    "build": "npm -ws run build",
    "test": "npm -ws run test",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c ."
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^20.11.30",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  }
}
