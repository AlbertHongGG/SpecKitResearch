{
  "name": "dynamic-survey-logic",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=frontend",
    "dev:backend": "turbo dev --filter=backend",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:unit": "turbo test --filter=./packages/*",
    "test:frontend": "turbo test --filter=frontend",
    "test:backend": "turbo test --filter=backend",
    "test:e2e": "turbo test:e2e",
    "db:migrate": "turbo db:migrate --filter=backend",
    "db:seed": "turbo db:seed --filter=backend"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "tsup": "^8.4.0",
    "turbo": "^2.5.6",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9"
  }
}
